    "ethers": "^4.0.43",
    "mocha": "^7.0.0",
    "ts-node": "^8.6.2",
    "typechain": "^1.0.3",
    "typechain-target-ethers": "^1.0.3",
    "typescript": "^3.7.5"
  },
